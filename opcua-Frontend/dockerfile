# Stage 1: Build Angular app
FROM node:20-alpine AS build
WORKDIR /app

# Install system dependencies (some npm packages need these)
RUN apk add --no-cache python3 make g++

# More efficient caching for dependencies
COPY package.json package-lock.json ./
RUN npm ci --quiet

# Copy and build app
COPY . .
RUN npm run build -- --configuration production

# Stage 2: Serve app with Nginx
FROM nginx:alpine
# Adjust this path to match your ACTUAL build output:
COPY --from=build /app/dist/opcua-dashboard/browser /usr/share/nginx/html
COPY nginx.conf /etc/nginx/conf.d/default.conf


# Verify the correct dist path (adjust if needed)
COPY --from=build /app/dist/opcua-dashboard /usr/share/nginx/html

# Nginx configuration
COPY nginx.conf /etc/nginx/conf.d/default.conf

EXPOSE 80
CMD ["nginx", "-g", "daemon off;"]